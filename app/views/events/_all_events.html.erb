
<br><br><br>
<%if @events != nil%>
<h1>past events</h1>
  <%@events.each_with_index do |event,index|%>
    <% if event.date.past?%>
      <h1><%=index + 1%>) Name: <%=event.name%> </h1>
      <h2>Date: <%=event.date%> </h2>
      <h2>Location: <%=event.location%> </h2>
       <h2><%=link_to event_path(event)  do%></h2> 
        See details
       <% end %>       /
    <% end %>  
  <% end %>
  <h1>future events</h1>
  <%@events.each_with_index do |event,index|%>
    <% if !event.date.past?%>
      <h1><%=index + 1%>) Name: <%=event.name%> </h1>
      <h2>Location: <%=event.location%></h2>
      <h2>Date: <%=event.date%> </h1>
       <h2><%=link_to event_path(event)  do%></h2> 
        See details
       <% end %> <br>
      <%=link_to 'book',"/attend/#{event.id}",method: :post%>
    <% end %>  
  <% end %>
<% end %>
